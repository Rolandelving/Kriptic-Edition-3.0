                <pre id="codeBlock">// Step 1: Find ALL buttons (including non-interactable ones)
const practiceSection = document.querySelector('.question-and-submission-view');
const allButtons = practiceSection ? 
    practiceSection.querySelectorAll('.SelectableTile.MULTIPLE_CHOICE') : 
    document.querySelectorAll('.SelectableTile.MULTIPLE_CHOICE');

console.log(`Found ${allButtons.length} button(s):`);
console.log('─────────────────────────────');

// Step 2: Extract the question
const questionElement = practiceSection ? 
    practiceSection.querySelector('.ixl-html-crate-root .secContentPiece') :
    document.querySelector('.practice-item-display .secContentPiece');
    
const questionText = questionElement ? questionElement.textContent.trim() : 'Question not found';
console.log('Question:', questionText);
console.log('─────────────────────────────');

// Step 3: Log all button options (even non-interactable)
let answerButtons = [];
allButtons.forEach((button, index) => {
    const textDiv = button.querySelector('.GeneticallyModified div');
    const buttonText = textDiv ? textDiv.textContent.trim() : 'No text found';
    const isNonInteractive = button.classList.contains('nonInteractive');
    
    console.log(`Option ${index + 1}: "${buttonText}" ${isNonInteractive ? '(non-interactable)' : '(clickable)'}`);
    answerButtons.push({ element: button, text: buttonText, interactive: !isNonInteractive });
});
console.log('─────────────────────────────');

// Step 4: Parse and solve the question
let calculatedAnswer = null;
// Replace commas and normalize all dash types to regular minus
let cleanQuestion = questionText
    .replace(/,/g, '')
    .replace(/[–—−]/g, '-');

console.log('Cleaned question:', cleanQuestion);

// TYPE 1: Positive/Negative Questions
// ===========================================
if (cleanQuestion.toLowerCase().includes('positive or negative')) {
    let result = null;
    
    // Multiplication: "–24 × –572889"
    const multMatch = cleanQuestion.match(/(-?\d+)\s*[×*]\s*(-?\d+)/);
    if (multMatch) {
        const num1 = parseInt(multMatch[1]);
        const num2 = parseInt(multMatch[2]);
        result = num1 * num2;
        console.log(`Calculation: ${num1} × ${num2} = ${result}`);
    }
    
    // Division: "–100 ÷ –5"
    const divMatch = cleanQuestion.match(/(-?\d+)\s*[÷/]\s*(-?\d+)/);
    if (divMatch && !multMatch) {
        const num1 = parseInt(divMatch[1]);
        const num2 = parseInt(divMatch[2]);
        result = num1 / num2;
        console.log(`Calculation: ${num1} ÷ ${num2} = ${result}`);
    }
    
    // Addition: "4532622 + -99"
    const addMatch = cleanQuestion.match(/(-?\d+)\s*\+\s*(-?\d+)/);
    if (addMatch && !multMatch && !divMatch) {
        const num1 = parseInt(addMatch[1]);
        const num2 = parseInt(addMatch[2]);
        result = num1 + num2;
        console.log(`Calculation: ${num1} + ${num2} = ${result}`);
    }
    
    // Subtraction: "100 - 50"
    const subMatch = cleanQuestion.match(/(-?\d+)\s*-\s*(-?\d+)/);
    if (subMatch && !addMatch && !multMatch && !divMatch) {
        const num1 = parseInt(subMatch[1]);
        const num2 = parseInt(subMatch[2]);
        result = num1 - num2;
        console.log(`Calculation: ${num1} - ${num2} = ${result}`);
    }
    
    if (result !== null) {
        calculatedAnswer = result >= 0 ? 'positive' : 'negative';
    }
}

// TYPE 2: Greater/Less Than Questions
// ===========================================
else if (cleanQuestion.match(/[><]/)) {
    // Extract the comparison: "Is 5 > 3?"
    const compMatch = cleanQuestion.match(/(-?\d+(?:\.\d+)?)\s*([><])\s*(-?\d+(?:\.\d+)?)/);
    if (compMatch) {
        const num1 = parseFloat(compMatch[1]);
        const operator = compMatch[2];
        const num2 = parseFloat(compMatch[3]);
        
        let result;
        if (operator === '>') {
            result = num1 > num2;
            console.log(`Comparison: ${num1} > ${num2} = ${result}`);
        } else {
            result = num1 < num2;
            console.log(`Comparison: ${num1} < ${num2} = ${result}`);
        }
        
        calculatedAnswer = result ? 'yes' : 'no';
        // Also check for "true"/"false" options
        if (answerButtons.some(btn => btn.text.toLowerCase() === 'true')) {
            calculatedAnswer = result ? 'true' : 'false';
        }
    }
}

// TYPE 3: Exact Answer Questions (What is X?)
// ===========================================
else if (cleanQuestion.match(/what is|calculate|solve|=|\?$/i)) {
    let result = null;
    
    // Multiplication
    const multMatch = cleanQuestion.match(/(-?\d+(?:\.\d+)?)\s*[×*]\s*(-?\d+(?:\.\d+)?)/);
    if (multMatch) {
        const num1 = parseFloat(multMatch[1]);
        const num2 = parseFloat(multMatch[2]);
        result = num1 * num2;
        console.log(`Calculation: ${num1} × ${num2} = ${result}`);
    }
    
    // Division
    const divMatch = cleanQuestion.match(/(-?\d+(?:\.\d+)?)\s*[÷/]\s*(-?\d+(?:\.\d+)?)/);
    if (divMatch && !multMatch) {
        const num1 = parseFloat(divMatch[1]);
        const num2 = parseFloat(divMatch[2]);
        result = num1 / num2;
        console.log(`Calculation: ${num1} ÷ ${num2} = ${result}`);
    }
    
    // Addition
    const addMatch = cleanQuestion.match(/(-?\d+(?:\.\d+)?)\s*\+\s*(-?\d+(?:\.\d+)?)/);
    if (addMatch && !multMatch && !divMatch) {
        const num1 = parseFloat(addMatch[1]);
        const num2 = parseFloat(addMatch[2]);
        result = num1 + num2;
        console.log(`Calculation: ${num1} + ${num2} = ${result}`);
    }
    
    // Subtraction
    const subMatch = cleanQuestion.match(/(-?\d+(?:\.\d+)?)\s*-\s*(-?\d+(?:\.\d+)?)/);
    if (subMatch && !addMatch && !multMatch && !divMatch) {
        const num1 = parseFloat(subMatch[1]);
        const num2 = parseFloat(subMatch[2]);
        result = num1 - num2;
        console.log(`Calculation: ${num1} - ${num2} = ${result}`);
    }
    
    if (result !== null) {
        calculatedAnswer = result.toString();
        // Round if needed
        if (!Number.isInteger(result)) {
            calculatedAnswer = result.toFixed(2);
        }
    }
}

// TYPE 4: True/False Questions
// ===========================================
else if (answerButtons.some(btn => ['true', 'false'].includes(btn.text.toLowerCase()))) {
    console.log('Detected: True/False question');
    // Would need more context to solve these automatically
    calculatedAnswer = 'true'; // Placeholder
}

// TYPE 5: Even/Odd Questions
// ===========================================
else if (cleanQuestion.toLowerCase().includes('even or odd')) {
    const numMatch = cleanQuestion.match(/(-?\d+)/);
    if (numMatch) {
        const num = parseInt(numMatch[1]);
        calculatedAnswer = num % 2 === 0 ? 'even' : 'odd';
        console.log(`${num} is ${calculatedAnswer}`);
    }
}

// Step 5: Log the answer
console.log('─────────────────────────────');
if (calculatedAnswer) {
    console.log(`✅ ANSWER: ${calculatedAnswer.toUpperCase()}`);
    console.log('─────────────────────────────');
    
    // Check if answer exists in the options
    const matchingButton = answerButtons.find(btn => 
        btn.text.toLowerCase() === calculatedAnswer.toLowerCase() ||
        btn.text.toLowerCase().includes(calculatedAnswer.toLowerCase())
    );
    
    if (matchingButton) {
        console.log(`Found "${calculatedAnswer}" button - ${matchingButton.interactive ? 'CLICKABLE' : 'NON-INTERACTABLE'}`);
    } else {
        console.log('Available options:', answerButtons.map(b => b.text).join(', '));
    }
} else {
    console.log('❌ Could not calculate answer');
    console.log('Available options:', answerButtons.map(b => b.text).join(', '));
}
console.log('─────────────────────────────');</pre>
            </div>

            <div class="warning-box">
                <h3 class="warning-title">⚠️ Educational Purpose Only</h3>
                <p class="warning-text">
                    This code is provided for educational purposes to help you understand web development concepts like DOM manipulation, JavaScript parsing, and element selection. It demonstrates how websites work and should only be used for learning. Always follow your school's academic integrity policies and use these tools responsibly.
                </p>
            </div>

            <h2 class="section-title">What This Code Does</h2>
            <div class="step">
                <p class="step-text">Finds and identifies all answer buttons on the page</p>
            </div>
            <div class="step">
                <p class="step-text">Extracts the question text from the DOM</p>
            </div>
            <div class="step">
                <p class="step-text">Parses different types of math problems (multiplication, division, addition, subtraction)</p>
            </div>
            <div class="step">
                <p class="step-text">Determines question type (positive/negative, greater/less than, exact answer, etc.)</p>
            </div>
            <div class="step">
                <p class="step-text">Calculates the answer and displays it in the console</p>
            </div>

            <h2 class="section-title">Learning Opportunities</h2>
            <p class="description">
                By studying this code, you can learn about querySelector methods, regular expressions, string manipulation, mathematical operations in JavaScript, and how to interact with webpage elements programmatically.
            </p>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('starfield');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const stars = [];
        const starCount = 200;

        for (let i = 0; i < starCount; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                radius: Math.random() * 1.5,
                speed: Math.random() * 0.5 + 0.1,
                opacity: Math.random()
            });
        }

        function animateStars() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            stars.forEach(star => {
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.radius, 0, Math.PI * 2);
                ctx.fillStyle = `rgba(255, 255, 255, ${star.opacity})`;
                ctx.fill();
                
                star.y += star.speed;
                star.opacity = Math.sin(Date.now() * 0.001 + star.x) * 0.5 + 0.5;
                
                if (star.y > canvas.height) {
                    star.y = 0;
                    star.x = Math.random() * canvas.width;
                }
            });
            
            requestAnimationFrame(animateStars);
        }

        animateStars();

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        function copyCode() {
            const codeBlock = document.getElementById('codeBlock');
            const button = document.querySelector('.copy-btn');
            
            const textArea = document.createElement('textarea');
            textArea.value = codeBlock.textContent;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            document.body.appendChild(textArea);
            textArea.select();
            
            try {
                document.execCommand('copy');
                button.textContent = '✓ Copied!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.textContent = 'Copy Code';
                    button.classList.remove('copied');
                }, 2000);
            } catch (err) {
                button.textContent = 'Failed to copy';
            }
            
            document.body.removeChild(textArea);
        }
    </script>
</body>
